<% layout("/layouts/adminboilerplate") %>
<body>
    <div class="page-wrapper">
       <div class="content container-fluid">
         <div class="page-header">
            <div class="row align-items-center">
               <div class="col">
                  <h3 class="page-title">Students Details</h3>
                  <ul class="breadcrumb">
                     <li class="breadcrumb-item"><a href="/mms/admin/dashboard">Dashboard</a></li>
                     <li class="breadcrumb-item active">Students</li>
                  </ul>
               </div>

               <div class="col-auto text-right float-right ml-auto">
                  <a href="#" class="btn btn-outline-primary mr-2"><i class="fas fa-download"></i> Download</a>
                  <a href="/mms/admin/addStudent" class="btn btn-primary"><i class="fas fa-plus"></i></a>
               </div>
            </div>
         </div>
         
         <div class="row">
            <div class="col-sm-12">
               <div class="card card-table">
                  <div class="card-header" style="background-color: #7bc2e5;">
                     <h5 class="card-title page-title">Students</h5>
                  </div>
                  <div class="card-body">
                     <div class="table-responsive">
                        <table class="table table-hover table-center mb-0 datatable">
                           <thead>
                              <tr>
                                 <th>Roll No</th>
                                 <th>Name</th>
                                 <th>Department</th>
                                 <th>Room #</th>
                                 <th>Batch</th>
                                 <th>Mobile Number</th>
                                 <th class="text-right">Action</th>
                              </tr>
                           </thead>
                           <tbody>
                              
                              <% for( let index = 0; index < data.length; index++ ) { %>
                              <tr>
                                    <td><%- data[index].cms %></td>
                                    <td>
                                       <h2 class="table-avatar">
                                          <a href="student-details.html" class="avatar avatar-sm mr-2"><img class="avatar-img rounded-circle" src="/assests/M. Ahsan Sajjad.jpeg" alt="User Image"></a>
                                          <a href="student-details.html"><%- data[index].name %></a>
                                       </h2>
                                    </td>
                                    <td><%- data[index].department %></td>
                                    <td><%- data[index].room %></td>
                                    <td><%- data[index].batch %></td>
                                    <td><%- data[index].phone %></td>
                                    <td class="text-right">
                                       <div class="actions">
                                          <form method="GET" action="http://localhost:3001/mms/admin/student/<%= data[index]._id %>">
                                             <button href="#" class="btn btn-sm bg-success-light mr-2">
                                                <i class="fas fa-pen"></i>
                                             </button>
                                          </form>
                                          <form method="POST" action="http://localhost:3001/mms/admin/student/<%= data[index]._id %>?_method=DELETE">
                                             <input type="hidden" name="_method" value="DELETE">
                                             <button href="#" class="btn btn-sm bg-danger-light">
                                                <i class="fas fa-trash"></i>
                                             </button>
                                          </form>
                                       </div>
                                    </td>
                                 </tr>
                                 <% } %>
                              
                           </tbody>
                        </table>
                     </div>
                  </div>
               </div>
            </div>
         </div>

       </div>

    </div>
</body>    
     